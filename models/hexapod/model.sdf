    <link name="front_right_leg">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name="leg_visual">
        <pose>0.06 0 0 0 1.57 0</pose>  <!-- Leg extends horizontally outward -->
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length>0.12</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.8 0.2 0.2 1</ambient>
          <diffuse>0.8 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_right_joint" type="revolute">
      <parent>body</parent>
      <child>front_right_leg</child>
      <pose>0.08 -0.06 -0.02 0 0 0</pose>  <!-- Joint at bottom of body -->
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

