<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="test_simple">
    <!-- Blue body -->
    <link name="body">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.3 0.2 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Red leg extending RIGHT -->
    <link name="red_leg">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <visual name="red_visual">
        <pose>0.15 0 0 0 1.5708 0</pose>  <!-- 15cm to the right, horizontal -->
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="red_joint" type="fixed">
      <parent>body</parent>
      <child>red_leg</child>
      <pose>0 -0.12 0 0 0 0</pose>  <!-- Attached to RIGHT side of body -->
    </joint>

    <!-- Green leg extending LEFT -->
    <link name="green_leg">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <visual name="green_visual">
        <pose>-0.15 0 0 0 1.5708 0</pose>  <!-- 15cm to the left, horizontal -->
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="green_joint" type="fixed">
      <parent>body</parent>
      <child>green_leg</child>
      <pose>0 0.12 0 0 0 0</pose>  <!-- Attached to LEFT side of body -->
    </joint>

  </model>
</sdf>