<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="simple_hexapod">
    <!-- Main body -->
    <link name="body">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <visual name="body_visual">
        <geometry>
          <box>
            <size>0.20 0.16 0.06</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
        </material>
      </visual>
      <collision name="body_collision">
        <geometry>
          <box>
            <size>0.20 0.16 0.06</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Right Leg - Extends horizontally to the right -->
    <link name="right_leg">
      <pose>0 0 0 0 0 0</pose>  <!-- Relative to joint -->
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name="leg_visual">
        <pose>0.10 0 0 0 1.5708 0</pose>  <!-- 10cm outward, rotated to horizontal -->
        <geometry>
          <cylinder>
            <radius>0.02</radius>
            <length>0.20</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>  <!-- Bright red -->
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="right_joint" type="revolute">
      <parent>body</parent>
      <child>right_leg</child>
      <pose>0 -0.10 0 0 0 0</pose>  <!-- Joint at RIGHT side of body -->
      <axis>
        <xyz>0 0 1</xyz>  <!-- Rotate around vertical axis -->
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <!-- Left Leg - Extends horizontally to the left -->
    <link name="left_leg">
      <pose>0 0 0 0 0 0</pose>  <!-- Relative to joint -->
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name="leg_visual">
        <pose>0.10 0 0 0 1.5708 0</pose>  <!-- 10cm outward, rotated to horizontal -->
        <geometry>
          <cylinder>
            <radius>0.02</radius>
            <length>0.20</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>  <!-- Bright green -->
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="left_joint" type="revolute">
      <parent>body</parent>
      <child>left_leg</child>
      <pose>0 0.10 0 0 0 0</pose>  <!-- Joint at LEFT side of body -->
      <axis>
        <xyz>0 0 1</xyz>  <!-- Rotate around vertical axis -->
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <!-- ArduPilot Plugin for servo control -->
    <plugin filename="gz-sim-ardupilot-plugin-system" name="gz::sim::systems::ArduPilotPlugin">
      <fdm_addr>127.0.0.1</fdm_addr>
      <fdm_port_in>9002</fdm_port_in>
      <fdm_port_out>9003</fdm_port_out>
      <modelXYZToAirplaneXForwardZDown>0 0 0 3.141592653589793 0 0</modelXYZToAirplaneXForwardZDown>
      <gazeboXYZToNED>0 0 0 3.141592653589793 0 0</gazeboXYZToNED>
      
      <control channel="0">
        <jointName>right_joint</jointName>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>POSITION</type>
        <p_gain>10.0</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.0</cmd_max>
        <cmd_min>-2.0</cmd_min>
      </control>
      
      <control channel="1">
        <jointName>left_joint</jointName>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>POSITION</type>
        <p_gain>10.0</p_gain>
        <i_gain>0</i_gain>
        <d_gain>0</d_gain>
        <i_max>0</i_max>
        <i_min>0</i_min>
        <cmd_max>2.0</cmd_max>
        <cmd_min>-2.0</cmd_min>
      </control>
    </plugin>

  </model>
</sdf>